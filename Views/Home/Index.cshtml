    <style>
        .logout-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s;
        }

        .logout-button:hover {
            background-color: #0056b3;
        }
         body {
            font-family: Arial, sans-serif;
        }

        /* Container for the menu */
        .menu-container {
            position: relative;
            display: inline-block;
        }

        /* Menu button */
        .menu-button {
            background-color: #3498db;
            color: white;
            padding: 10px 20px;
            cursor: pointer;
            border: none;
            border-radius: 4px;
        }

        /* Hidden menu */
        .menu-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
            min-width: 160px;
            border-radius: 4px;
        }

        /* Menu items */
        .menu-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        .menu-content a:hover {
            background-color: #f1f1f1;
        }

        /* Show the menu on hover or click */
        .menu-container:hover .menu-content,
        .menu-container:focus-within .menu-content {
            display: block;
        }
    </style>
</head>

